{
  "info": {
    "name": "CyberAI Security API",
    "description": "Postman Collection for CyberAI backend (FastAPI)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        }
      },
      "response": []
    },
    {
      "name": "Analyze text (POST /analyze)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"This message contains malware and phishing\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/analyze",
          "host": ["{{base_url}}"],
          "path": ["analyze"]
        }
      },
      "response": []
    },
    {
      "name": "Analyze safe text",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Hello friend, how are you?\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/analyze",
          "host": ["{{base_url}}"],
          "path": ["analyze"]
        }
      },
      "response": []
    },
    {
      "name": "Analyze suspicious URL",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"http://danger-alert-free-login.paypal-secure.com/login\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/analyze",
          "host": ["{{base_url}}"],
          "path": ["analyze"]
        }
      },
      "response": []
    }
  ]
}
